{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "google"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "max-len": "off",
    "new-cap": "off",
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "require-jsdoc": "off",
    "semi": [
      "error"
    ],
    "camelcase": [
      "error",
      {
        "allow": [
          "is_*",
          "_s"
        ]
      }
    ],
    "brace-style": [
      "error",
      "stroustrup",
      {
        "allowSingleLine": true
      }
    ],
    "indent": [
      "error",
      2,
      {
        "ignoredNodes": [
          "ConditionalExpression"
        ]
      }
    ]
  }
}